services:
  # Redis
  redis:
    image: redis:alpine
    container_name: redis-kantinku
    restart: always
    network_mode: "host"
#    ports:
#      - "6379:6379"

  # Web Server
  web:
    build: .
    container_name: kantinku_web
    restart: always
    command: >
      sh -c "python manage.py migrate &&
             python manage.py collectstatic --noinput &&
             python manage.py runserver 0.0.0.0:8000"
    volumes:
      - .:/app
      - static_volume:/app/static
      - media_volume:/app/media
      - ./certs/rootCA.cer:/app/certs/rootCA.cer:ro
#    ports:
#      - "8000:8000"
    environment:
      # Arahkan ke IP Database
      - DB_HOST=192.168.20.10
      - DB_PORT=5432
      - DB_NAME=kantinku_db
      - DB_USER=kantinku
      - DB_PASSWORD=Kantinku-RKS307
    env_file:
      - .env
    depends_on:
      - redis
    network_mode: "host"

  celery:
    build: .
    container_name: kantinku-celery
    restart: always
    command: celery -A canteen worker --loglevel=info --pool=solo
    volumes:
      - .:/app
      - ./certs/rootCA.cer:/app/certs/rootCA.cer:ro
    environment:
      - RUN_MIGRATIONS=false
      - DB_HOST=192.168.20.10
      - DB_PASSWORD=Kantinku-RKS307
    env_file:
      - .env
    depends_on:
      - web
      - redis
    network_mode: "host"

volumes:
  static_volume:
  media_volume:
