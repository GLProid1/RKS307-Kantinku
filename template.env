# --- Django Core ---
# Kunci rahasia Django (Gunakan string acak yang panjang untuk produksi)
SECRET_KEY=django-insecure-ganti-dengan-kunci-rahasia-anda
# Set ke True untuk development, False untuk production
DEBUG=True
# Host yang diizinkan, pisahkan dengan koma
ALLOWED_HOSTS=localhost,127.0.0.1

# --- Database (PostgreSQL) ---
# Pastikan Anda sudah membuat database dengan nama ini di PostgreSQL
DB_ENGINE=django.db.backends.postgresql
DB_NAME=kantinku_db
DB_USER=postgres
DB_PASSWORD=password_postgres_anda
DB_HOST=localhost
DB_PORT=5432

# --- Email Configuration (SMTP) ---
# Diperlukan untuk mengirim invoice dan notifikasi
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=email_anda@gmail.com
# Jika menggunakan Gmail, gunakan App Password, bukan password login biasa
EMAIL_HOST_PASSWORD=app_password_anda

# --- Celery & Redis ---
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# --- CORS Headers ---
# URL Frontend yang diizinkan mengakses API (misal: React/Vue berjalan di port 3000)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000